{
  "rules": {
    "dporians": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": "group",
      "$uid": {
        "boots": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "bootstamp": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "color": {
          ".validate": "newData.val() == '' || newData.val() == 'black' || newData.val() == 'blue' || newData.val() == 'green' || newData.val() == 'orange' || newData.val() == 'purple' || newData.val() == 'red'"
        },
        "group": {
          ".validate": "newData.isString() || newData.val() == ''"
        },
        "striked": {
          ".validate": "newData.isString() && newData.val().length < 256"
        }
      }
    },
    "groups": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        "blue-content": {
          ".validate": "newData.val() == '' || newData.isString() && newData.val().length < 101"
        },
        "blue-strikes": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 4"
        },
        "blue-timestamp": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "blue-vacancy": {
          ".validate": "newData.isBoolean()"
        },
        "green-content": {
          ".validate": "newData.val() == '' || newData.isString() && newData.val().length < 101"
        },
        "green-strikes": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 4"
        },
        "green-timestamp": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "green-vacancy": {
          ".validate": "newData.isBoolean()"
        },
        "orange-content": {
          ".validate": "newData.val() == '' || newData.isString() && newData.val().length < 101"
        },
        "orange-strikes": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 4"
        },
        "orange-timestamp": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "orange-vacancy": {
          ".validate": "newData.isBoolean()"
        },
        "purple-content": {
          ".validate": "newData.val() == '' || newData.isString() && newData.val().length < 101"
        },
        "purple-strikes": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 4"
        },
        "purple-timestamp": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "purple-vacancy": {
          ".validate": "newData.isBoolean()"
        },
        "red-content": {
          ".validate": "newData.val() == '' || newData.isString() && newData.val().length < 101"
        },
        "red-strikes": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 4"
        },
        "red-timestamp": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "red-vacancy": {
          ".validate": "newData.isBoolean()"
        },
        "stimulus-category": {
          ".validate": "newData.isString() && newData.val().length < 24"
        },
        "stimulus-content": {
          ".validate": "newData.isString() && newData.val().length < 256"
        },
        "stimulus-instructions": {
          ".validate": "newData.isString() && newData.val().length < 24"
        },
        "stimulus-strikes": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 3"
        }
      }
    },
    "instructions": {
      ".read": "auth != null",
      ".write": false
    },
    "slogans": {
      ".read": true,
      ".write": false
    },
    "statistics": {
      ".read": true,
      ".write": "auth != null",
      "comments": {
        ".validate": "newData.isNumber() && newData.val() >= 2"
      },
      "countries": {
        ".validate": "newData.isNumber() && newData.val() >= 2"
      },
      "devices": {
        ".validate": "newData.isNumber() && newData.val() >= 2"
      },
      "version": {
        ".validate": "newData.isNumber() && newData.val() >= 0"
      }
    },
    "stimuli": {
      ".read": "auth != null",
      ".write": false
    },
    "vacancies": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 5"
      }
    }
  }
}